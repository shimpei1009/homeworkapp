<body>
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Sign Up</h3>
			</div>
			<div class="card-body">
				<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						 <%= f.text_field :nickname, autofocus: true, placeholder: "nickname", class:"form-control" %>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-envelope"></i></span>
						</div>
						 <%= f.email_field :email, placeholder: "e-mail", autofocus: true, autocomplete: "email", class:"form-control" %>
					</div>
					<div class="input-group form-group">
                <% if @minimum_password_length %>
                <em><% @minimum_password_length %> </em>
                <% end %><br />
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<%= f.password_field :password, placeholder: "Password (6 characters minimum)", autocomplete: "new-password", class:"form-control" %>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
						<%= f.password_field :password_confirmation, placeholder: "Password confirmation", autocomplete: "new-password", class:"form-control" %>
					</div>
					<div class="form-group">
					  <%= f.submit "Sign up", class: "btn float-right login_btn" %>
					</div>
				<% end %>
			</div>
				<div class="d-flex justify-content-center">
				</div>
			</div>
		</div>
	</div>
</div>